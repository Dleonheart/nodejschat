<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Chat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/chat_style.css" rel="stylesheet" media="screen">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        window.CHAT = {app_name:"chat",user:{data:{name:"<%= name %>",picture:"<%= picture %>"}}};
    </script>
    <script src="js/chat.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <!-- Login Page -->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div id="messages"></div>
                <div id="ChatFrame" class="row-fluid">
                    <form id="message">
                        <div class="span12">
                            <input type="text" class="span12" name="text" id="user_text" required />
                            <button type="submit" style="display:none" data-loading-text="Enviando...">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>